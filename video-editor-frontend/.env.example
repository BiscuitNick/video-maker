# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_NANO_BANANA_API_URL=https://api.nanobanana.io

# Upload Settings
VITE_MAX_UPLOAD_SIZE=524288000  # 500MB in bytes

# Supported Formats (comma-separated)
VITE_SUPPORTED_VIDEO_FORMATS=mp4,webm,mov,avi,mkv
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp,svg
VITE_SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,aac,m4a

# Timeline Defaults
VITE_SNAP_INTERVAL=0.1  # Snap interval in seconds (100ms)
VITE_DEFAULT_IMAGE_DURATION=5  # Default duration for images in seconds
VITE_DEFAULT_ZOOM=50  # Default zoom level (pixels per second)

# Feature Flags
VITE_ENABLE_NANO_BANANA=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_EXPORT=true

# Development
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false
